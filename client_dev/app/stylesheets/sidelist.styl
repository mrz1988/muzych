@require 'colors'
@require 'utils'
@require 'layout'

.sidelist-backdrop
	width: $sidelist-width
	background: $medium-backdrop

.sidelist
	width: $sidelist-width
	overflow-y: scroll
	overflow-x: hidden
	shadow()
	background: $medium-backdrop

.sl-item
	height: 4rem
	width: 100%
	padding: 1rem
	color: $text
	text-align: center
	border-bottom: 1px solid $divider
	background-color: $light-backdrop

.sl-item:hover
	background-color: $light-primary
