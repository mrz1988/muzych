$header-height = 5rem
$header-topbar-height = 0.8rem
$footer-height = 4rem
$footer-bottom-height = 0.5rem
$sidelist-width = 34rem

// Primary components in top-down order

// Search panel for side list
.sl-search-panel
	z-index: 50
	position: absolute
	bottom: 0.5rem
	left: 0

// Header back button
div.back-button-panel
	z-index: 50
	position: absolute
	top: $header-topbar-height
	left: 0

// Header hamburger
div.hamburger-panel
	z-index: 50
	position: absolute
	top: $header-topbar-height
	left: 33rem

// Primary app header
div.header-panel
	z-index: 40
	position: absolute
	top: 0
	left: 0
	right: 0
	shadow()

// Primary app footer
div.footer-panel
	z-index: 40
	position: absolute
	bottom: 0
	left: 0
	right: 0
	shadow()

// Side list hide button
div.sl-shutter-panel
	z-index: 30
	position: absolute
	top: $header-height + 0.5rem
	left: 0.5rem
	height: 3.3rem
	width: 3.3rem

// Side list
div.sl-panel
	z-index: 20
	shadow()
	position: absolute
	top: $header-height
	bottom: $footer-height
	left: 0
	overflow-y: scroll
    overflow-x: hidden
	background-color: $dark-backdrop


// Main app window
div.main-panel
	position: absolute
	top: $header-height
	left: $sidelist-width
	bottom: 0
	right: 0
	padding-left: 4rem
	padding-top: 2rem
	background: $medium-backdrop
	white-space: nowrap
	overflow: hidden
