@require 'colors'

shadow(offset-x = 0, offset-y = 0, radius = 5px, color = $shadow)
	-webkit-box-shadow offset-x offset-y radius color
	-moz-box-shadow offset-x offset-y radius color
	box-shadow offset-x offset-y radius color

bottom-shadow()
	-webkit-box-shadow: 0 5px 6px -6px $shadow
	-moz-box-shadow: 0 5px 6px -6px $shadow
	box-shadow: 0 5px 6px -6px $shadow

right-shadow()
	-webkit-box-shadow: 5px 0 5px -5px $shadow
	-moz-box-shadow: 5px 0 5px -5px $shadow
	box-shadow: 5px 0 5px -5px $shadow
